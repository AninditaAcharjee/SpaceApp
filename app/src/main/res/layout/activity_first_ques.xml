    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FirstQues"
    android:background="#FFC51C">

    <TextView
        android:id="@+id/ques1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:padding="20dp"
        android:textSize="30sp"
        android:text="First responders GET PRECISE GPS LOCATIONS by using ---"
        />
    <Button
        android:layout_width="match_parent"
        android:background="#F5D649"
        android:textSize="16sp"
        android:padding="20dp"
        android:layout_height="wrap_content"
        android:id="@+id/option11"
        android:layout_below="@id/ques1"
        android:text="1. NASA Algorithms">

    </Button>
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#D2AE0A"
            android:padding="20dp"
            android:textSize="16sp"
            android:id="@+id/option12"
            android:layout_below="@id/option11"
            android:text="2. SpaceX Algorithm">

        </Button>

</RelativeLayout>