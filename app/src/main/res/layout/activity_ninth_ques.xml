<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFC51C">

    <TextView
        android:id="@+id/ques9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:padding="20dp"
        android:textSize="30sp"
        android:text="How NASA and partners help communities prepare for food storage?"
        />
    <Button
        android:layout_width="match_parent"
        android:background="#F5D649"
        android:textSize="16sp"
        android:padding="20dp"
        android:layout_height="wrap_content"
        android:id="@+id/option91"
        android:layout_below="@id/ques9"
        android:text="1. By using satellite data of precipitation and soil moisture.">

    </Button>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#D2AE0A"
        android:padding="20dp"
        android:textSize="16sp"
        android:id="@+id/option92"
        android:layout_below="@id/option91"
        android:text="2. giving safety and healthy living practice">

    </Button>

</RelativeLayout>