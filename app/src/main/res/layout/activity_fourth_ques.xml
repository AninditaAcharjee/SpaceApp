<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFC51C">

    <TextView
        android:id="@+id/ques4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:padding="20dp"
        android:textSize="30sp"
        android:text="Did you enjoy images and visualizations of earth ? "
        />
    <Button
        android:layout_width="match_parent"
        android:padding="20dp"
        android:background="#F5D649"
        android:textSize="16sp"
        android:layout_height="wrap_content"
        android:id="@+id/option41"
        android:layout_below="@id/ques4"
        android:text="1. Yes">

    </Button>
    <Button
        android:layout_width="match_parent"
        android:padding="20dp"
        android:background="#D2AE0A"
        android:textSize="16sp"
        android:layout_height="wrap_content"
        android:id="@+id/option42"
        android:layout_below="@id/option41"
        android:text="2. No">

    </Button>

</RelativeLayout>