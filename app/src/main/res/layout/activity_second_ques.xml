<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFC51C">

    <TextView
        android:id="@+id/ques2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:padding="20dp"
        android:textSize="30sp"
        android:text="How images and visualizations of earth from SPACE help us?"
        />
    <Button
        android:layout_width="match_parent"
        android:padding="20dp"
        android:background="#F5D649"
        android:textSize="16sp"
        android:layout_height="wrap_content"
        android:id="@+id/option21"
        android:layout_below="@id/ques2"
        android:text="1. To better understand our planet">

    </Button>
    <Button
        android:layout_width="match_parent"
        android:padding="20dp"
        android:background="#D2AE0A"
        android:textSize="16sp"
        android:layout_height="wrap_content"
        android:id="@+id/option22"
        android:layout_below="@id/option21"
        android:text="2. To see beautiful scenario clearly">

    </Button>

</RelativeLayout>