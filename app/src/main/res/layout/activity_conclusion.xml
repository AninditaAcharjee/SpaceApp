<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFC51C"
    >
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="90dp"
            android:layout_centerHorizontal="true"
            android:id="@+id/text1"
            android:padding="30dp"
            android:text="This is Conclusion"
            android:textSize="20sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="90dp"
        android:layout_centerHorizontal="true"
        android:id="@+id/text"
        android:layout_below="@id/text1"
        android:padding="30dp"
        android:text="This videos are taken from NASA and other agencies"
        android:textSize="20sp" />


        <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
            android:layout_below="@id/text"
            android:id="@+id/text2"
        android:text="Intro --- https://www.youtube.com/watch?v=3rH3KAcYgBs&amp;ab_channel=NASA"
        android:textSize="20sp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/text2"
        android:id="@+id/text3"
        android:padding="20dp"
        android:text="https://www.youtube.com/watch?v=H1KWtG66lEQ&amp;ab_channel=JAXA%7C%E5%AE%87%E5%AE%99%E8%88%AA%E7%A9%BA%E7%A0%94%E7%A9%B6%E9%96%8B%E7%99%BA%E6%A9%9F%E6%A7%8B"
        android:textSize="20sp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/text3"
        android:id="@+id/text4"
        android:padding="20dp"
        android:text="Benefit for EARTH--- https://www.youtube.com/watch?v=md_GqmBP3Uo&amp;ab_channel=EuropeanSpaceAgency%2CESA"
        android:textSize="20sp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:layout_below="@id/text4"
        android:id="@+id/text5"
        android:text="https://www.youtube.com/watch?v=cu4ZvCguhaw&amp;list=PLrB0YjHguUtJqXrR1Q_4geIqbIjaBJ53H&amp;index=11&amp;ab_channel=NASAVideo"
        android:textSize="20sp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:layout_below="@id/text5"
        android:id="@+id/text6"
        android:text="Air--- https://www.youtube.com/watch?v=JQv2B0IwCQ0&amp;feature=youtu.be"
        android:textSize="20sp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:layout_below="@id/text6"
        android:id="@+id/text7"
        android:text="https://www.youtube.com/watch?v=wyuXc1Se_8g&amp;feature=emb_logo"
        android:textSize="20sp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:layout_below="@id/text7"
        android:id="@+id/text8"
        android:text="Water, Oceans And Ice-- https://www.youtube.com/watch?v=NIG5ZQT8IAY&amp;ab_channel=NASAClimateChange"
        android:textSize="20sp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:layout_below="@id/text8"
        android:id="@+id/text9"
        android:text="https://www.youtube.com/watch?v=0hWhtdjz3Sw&amp;feature=emb_logo"
        android:textSize="20sp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:layout_below="@id/text9"
        android:id="@+id/text10"
        android:text="Climate--- https://www.youtube.com/watch?v=9nLAyg4RQTo&amp;list=PLrB0YjHguUtJqXrR1Q_4geIqbIjaBJ53H&amp;index=18&amp;ab_channel=NASAClimateChange"
        android:textSize="20sp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:layout_below="@id/text10"
        android:id="@+id/text11"
        android:text="https://www.youtube.com/watch?v=vhuYueRpgwg&amp;feature=emb_logo"
        android:textSize="20sp" />

    <Button
        android:id="@+id/go_home"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/text11"
        android:background="#F5D649"
        android:padding="25dp"
        android:text="Go to Home"
        android:textSize="16sp" />

</RelativeLayout>

</ScrollView>