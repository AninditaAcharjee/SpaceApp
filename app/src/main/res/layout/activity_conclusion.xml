<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFC51C"
    >

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="90dp"
            android:layout_centerHorizontal="true"
            android:id="@+id/text1"
            android:padding="30dp"
            android:text="This is Conclusion"
            android:textSize="20sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="90dp"
        android:layout_centerHorizontal="true"
        android:id="@+id/text"
        android:layout_below="@id/text1"
        android:padding="30dp"
        android:text="This videos are taken from NASA"
        android:textSize="20sp" />


        <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
            android:layout_below="@id/text"
            android:id="@+id/text2"
        android:text="NASA Technology Improves Life on Earth --- https://www.youtube.com/watch?v=3rH3KAcYgBs&amp;ab_channel=NASA"
        android:textSize="20sp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/text2"
        android:id="@+id/text3"
        android:padding="20dp"
        android:text="NASA Satellites Picture Earth --- https://www.youtube.com/watch?v=cu4ZvCguhaw&amp;list=PLrB0YjHguUtJqXrR1Q_4geIqbIjaBJ53H&amp;index=11&amp;ab_channel=NASAVideo"
        android:textSize="20sp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/text3"
        android:id="@+id/text4"
        android:padding="20dp"
        android:text="Using NASA Data to Monitor Drought and Food Insecurity --- https://www.youtube.com/watch?v=9nLAyg4RQTo&amp;list=PLrB0YjHguUtJqXrR1Q_4geIqbIjaBJ53H&amp;index=18&amp;ab_channel=NASAClimateChange"
        android:textSize="20sp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:layout_below="@id/text4"
        android:id="@+id/text5"
        android:text="NASA science can reveal a more complete picture of atmospheric chemistry --- https://www.youtube.com/watch?v=JQv2B0IwCQ0&amp;feature=youtu.be"
        android:textSize="20sp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:layout_below="@id/text5"
        android:id="@+id/text6"
        android:text="Two new satellites set to study one of Earth's most critically changing regions --- https://www.youtube.com/watch?v=NIG5ZQT8IAY&amp;ab_channel=NASAClimateChange"
        android:textSize="20sp" />


    <Button
        android:id="@+id/go_home"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/text6"
        android:background="#F5D649"
        android:padding="25dp"
        android:text="Go to Home"
        android:textSize="16sp" />
</RelativeLayout>

</ScrollView>